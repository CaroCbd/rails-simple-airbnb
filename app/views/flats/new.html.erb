<div class="row justify-content-center">
  <div class="col-6">
    <h1 class="mb-4 text-center">Create a new flat</h1>
    <div class="bg-light p-4">
    <%= simple_form_for(@flat) do |f| %>
      <%= f.input :name, input_html: { class: "form-control p-3 d-flex flex-col mb-3"} %>
      <%= f.input :address, input_html: { class: "form-control p-3 d-flex flex-col mb-3"} %>
      <%= f.input :price_per_night, input_html: { class: "form-control p-3 d-flex flex-col mb-3"} %>
      <%= f.input :number_of_guests, input_html: { class: "form-control p-3 d-flex flex-col mb-3"} %>
      <%= f.input :description, input_html: { class: "form-control p-3 d-flex flex-col mb-3", cols: 5, rows: 10 }%>
      <%= f.submit "Create flat", { class: "btn btn-primary"} %>
    <% end %>
    </div>
 </div>
</div>
