
<h1 class="mb-4"> Discover our <%= @flats.count %> flats</h1>
<div class="cards">
  <% @flats.each do |flat|%>
    <div class="card border-dark rounded mb-3">
      <div class="card-header bg-light">
        <h2> <%= flat.name %> </h2>
        <p> <%= flat.address %> </p>
      </div>
      <div class="card-body d-flex flex-com justify-content-around align-items-baseline p-3">
        <div class="d-flex flex-row">
          <i class="fa-solid fa-hand-holding-dollar"></i>
          <p><%= flat.price_per_night %>  â‚¬/nigh</p>
        </div>
        <div class="d-flex flex-row">
          <i class="fa-solid fa-people-group"></i>
          <p><%= flat.number_of_guests %> guests</p>
        </div>
      </div>
      <div class="card-footer bg-transparent text-primary">
        <i class="fa-solid fa-house"></i>
        <%= link_to "See details", flat_path(flat) %>
      </div>
    </div>
  <% end %>
</div>
